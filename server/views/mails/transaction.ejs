  <body>
    <h1></h1>
    <table>
      <% for(var i=0; i < information.length; i++) { %>
        <tr>
        <b>Type</b> : <%if (information[i].type === 1) { %>
          Seeds
          <% } %>
          <%if (information[i].type === 2) { %>
          Tithe
          <% } %>
          <%if (information[i].type === 3) { %>
          Harvests
          <% } %>
